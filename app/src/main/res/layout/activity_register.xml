<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="udgaman.com.vachak2.activities.RegisterActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/register_first_name"
        android:hint="First Name"
        app:layout_constraintRight_toRightOf="@+id/activity_register"
        app:layout_constraintLeft_toLeftOf="@+id/activity_register"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/register_phone"
        android:textAlignment="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/register_last_name"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/register_first_name"
        app:layout_constraintRight_toRightOf="@+id/activity_register"
        app:layout_constraintLeft_toLeftOf="@+id/activity_register"
        android:hint="Last Name"
        android:textAlignment="center" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_country_spinner"
        app:layout_constraintRight_toRightOf="@+id/activity_register"
        app:layout_constraintLeft_toLeftOf="@+id/activity_register"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/register_phone"
        android:hint="Phone #"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/register_country_spinner"
        app:layout_constraintRight_toRightOf="@+id/activity_register"
        app:layout_constraintLeft_toLeftOf="@+id/activity_register" />

    <TextView
        android:text="Vachak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="@+id/activity_register"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_register"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toTopOf="@+id/activity_register"
        android:textSize="30sp"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_dark" />

    <Button
        android:text="Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_button"
        app:layout_constraintRight_toRightOf="@+id/activity_register"
        app:layout_constraintLeft_toLeftOf="@+id/activity_register"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/register_last_name"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="@android:color/holo_orange_light"
        android:elevation="3dp"
        android:fontFamily="sans-serif-condensed"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:onClick="registerButtonPress" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_progress_bar"
        app:layout_constraintRight_toRightOf="@+id/activity_register"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_register"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="@+id/activity_register"
        app:layout_constraintBottom_toBottomOf="@+id/activity_register"
        android:visibility="invisible" />
</android.support.constraint.ConstraintLayout>
