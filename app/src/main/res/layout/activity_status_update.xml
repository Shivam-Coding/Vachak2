<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_status_update"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="udgaman.com.vachak2.activities.StatusUpdate">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/status_editText"
        android:layout_marginBottom="15dp"
        android:id="@+id/status_listView"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Status"
        android:ems="10"
        android:layout_above="@+id/status_bottom_linear_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:id="@+id/status_editText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/status_bottom_linear_layout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp"
        android:background="@color/windowBackground">

        <Button
            android:text="likes"
            android:tag="likes"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/status_button_like"
            android:layout_weight="1"
            android:background="@color/windowBackground"
            android:textColor="@color/white" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
        <Button
            android:text="update"
            android:tag = "update"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/status_button_update"
            android:layout_weight="1"
            android:background="@color/windowBackground"
            android:textColor="@color/white" />

    <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/status_progressBar"
        android:layout_weight="1"
        android:visibility="invisible" />
</LinearLayout>

        <Button
            android:text="comments"
            android:tag="comments"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/status_button_comment"
            android:layout_weight="1"
            android:background="@color/windowBackground"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>
